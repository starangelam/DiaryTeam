<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".Timeline">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ratio_main_content">

		<!-- To be replaced by ListView-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<!-- An entry preview -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="80dp"
				android:orientation="horizontal"
				android:background="#FF3333" >

				<LinearLayout
					android:id="@+id/entry_preview_image_wrapper"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="horizontal">

				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="@integer/ratio_entry_preview_date">

					<TextView
						android:id="@+id/entry_preview_date_day"
						android:text="21"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="@integer/ratio_entry_preview_content">

					<TextView
						android:text="Diary Entry Title"
						android:layout_width="match_parent"
						android:layout_height="match_parent"/>
				</LinearLayout>
			</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:orientation="horizontal"
			android:background="#FF8803" ></LinearLayout>
		</LinearLayout>

	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@integer/ratio_main_nav"
		android:orientation="horizontal">

		<Button
			android:id="@+id/nav_new_entry"
			android:text="New"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@integer/ratio_nav_btn"/>
		<Button
			android:id="@+id/nav_new_entry_photo"
			android:text="Photo"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@integer/ratio_nav_btn"/>
		<Button
			android:id="@+id/nav_calendar"
			android:text="Cal"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@integer/ratio_nav_btn"/>
		<Button
			android:id="@+id/nav_timeline"
			android:text="Home"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@integer/ratio_nav_btn"/>

	</LinearLayout>

</LinearLayout>
