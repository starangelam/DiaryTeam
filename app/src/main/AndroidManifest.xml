<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.bcit.cst.team30.diary" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
			android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewEntry"
            android:label="@string/title_activity_view_entry"
			android:screenOrientation="portrait" >
		</activity>
        <activity
            android:name=".CreateEntry"
            android:label="@string/title_activity_create_entry"
			android:screenOrientation="portrait" >
		</activity>
        <activity
            android:name=".EditEntry"
            android:label="@string/title_activity_edit_entry"
			android:screenOrientation="portrait" >
		</activity>
    </application>

</manifest>
